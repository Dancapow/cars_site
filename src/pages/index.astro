---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<section class="bg-gray-900 text-white py-16">
 <nav class="container mx-auto px-4 py-6 flex items-center justify-between">
      <div class="text-2xl font-bold">
        <a href="#" class="hover:text-gray-400">OnlyFans</a>
      </div>
      <div class="space-x-4">
        <a href="#" class="hover:text-gray-400">Home</a>
        <a href="#" class="hover:text-gray-400">About</a>
        <a href="#" class="hover:text-gray-400">Services</a>
        <a href="#" class="hover:text-gray-400">Contact</a>
      </div>
      <div>
        <a href="#" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-500 rounded-lg hover:bg-red-600 focus:ring-4 focus:ring-red-300 transition duration-300">
          Sign Up
        </a>
      </div>
    </nav>
  <div class="container mx-auto px-4">
    <div class="flex flex-col-reverse lg:flex-row lg:items-center lg:justify-between">
      <!-- Text Content -->
      <div class="lg:w-1/2 mb-8 lg:mb-0">
        <h1 class="text-3xl font-extrabold leading-tight md:text-4xl lg:text-5xl xl:text-6xl mb-4">
          OnlyFans
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl mb-6 text-gray-400">
          We are giving the first 200 people a free subscription to our exclusive content.
        </p>
        <div class="flex flex-col gap-4 md:flex-row">
          <a href="#" class="inline-flex items-center justify-center px-6 py-3 text-lg font-medium text-white bg-red-500 rounded-lg hover:bg-red-600 focus:ring-4 focus:ring-red-300 transition duration-300">
            Get Started
            <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a href="#" class="inline-flex items-center justify-center px-6 py-3 text-lg font-medium text-gray-900 border border-gray-700 rounded-lg hover:bg-gray-800 focus:ring-4 focus:ring-gray-600 transition duration-300">
            Speak to Sales
          </a>
        </div>
      </div>
      <!-- Image -->
      <div class="lg:w-1/2 flex justify-center">
        <img src="https://picture1.goo-net.com/7000541558/30220727/J/70005415583022072701900.jpg" alt="Car Image" class="w-full h-auto rounded-lg shadow-lg">
      </div>
    </div>
  </div>
</section>
